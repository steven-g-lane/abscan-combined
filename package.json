{
  "name": "abscan",
  "version": "1.0.0",
  "description": "Code analysis tool with CLI scanner and Electron visualization viewer",
  "main": "dist/main.js",
  "type": "module",
  "bin": {
    "abscan": "dist/cli/index.cjs"
  },
  "scripts": {
    "build": "npm run build:css && npm run copy-static && npm run build:cli && npm run build:main && npm run build:renderer && npm run build:preload",
    "build:cli": "esbuild src/cli/index.ts --bundle --platform=node --format=cjs --outfile=dist/cli/index.cjs --sourcemap --external:ts-morph --external:globby --external:fs-extra --external:commander",
    "build:main": "esbuild src/viewer/main.ts --bundle --platform=node --format=esm --outfile=dist/main.js --sourcemap --external:electron",
    "build:renderer": "esbuild src/viewer/renderer/index.tsx --bundle --format=esm --outfile=dist/renderer.js --sourcemap --jsx=automatic --external:tailwindcss",
    "build:preload": "esbuild src/viewer/preload.ts --bundle --platform=node --format=cjs --outfile=dist/preload.js --sourcemap --external:electron",
    "build:css": "postcss src/viewer/renderer/index.css -o dist/styles.css",
    "copy-static": "cp src/viewer/public/index.html dist/ && mkdir -p dist/.ba_artifacts && cp .ba_artifacts/sample-miller-data.json dist/.ba_artifacts/ 2>/dev/null || true",
    "dev:cli": "ts-node src/cli/index.ts",
    "dev:viewer": "npm run build && electron .",
    "start": "NODE_ENV=development electron .",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": ["typescript", "analysis", "cli", "electron", "architecture", "visualization"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/steven-g-lane/abscan-combined.git"
  },
  "bugs": {
    "url": "https://github.com/steven-g-lane/abscan-combined/issues"
  },
  "homepage": "https://github.com/steven-g-lane/abscan-combined#readme",
  "dependencies": {
    "ts-morph": "^20.0.0",
    "globby": "^11.1.0",
    "fs-extra": "^11.1.1",
    "commander": "^11.1.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.2.0",
    "@types/fs-extra": "^11.0.2",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/jest": "^29.5.5",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.5",
    "esbuild": "^0.25.8",
    "esbuild-plugin-copy": "^2.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}